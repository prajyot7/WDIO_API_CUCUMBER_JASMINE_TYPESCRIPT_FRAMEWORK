{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "CommonJS",
    "resolveJsonModule":true,    
    "esModuleInterop": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/globals",
      "expect-webdriverio",
      "@wdio/jasmine-framework",
      "jasmine",
      "@wdio/devtools-service",
      "@wdio/cucumber-framework"
    ],
    "target": "es2022",
    "skipLibCheck": true,
    "outDir": ".",
  },
  "include": [
    "./**/*.ts",
    "./*.ts",
    "./**/*.ts",
    "./wdio.conf.api.ts",
    "./api_e2e/*.spec.ts",
    "./**/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "./**/**/*.js",
  ]
}