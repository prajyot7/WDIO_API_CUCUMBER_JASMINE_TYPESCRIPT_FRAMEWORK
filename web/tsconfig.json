{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "CommonJS",
    "resolveJsonModule":true,    
    "esModuleInterop": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/globals",
      "expect-webdriverio",
      "@wdio/jasmine-framework",
      "jasmine",
      "@wdio/devtools-service",
      "@wdio/cucumber-framework"
    ],
    "target": "es2022",
    "skipLibCheck": true,
    "outDir": ".",
  },

  "include": [
    "./**/*.e2e.ts",
    "./**/*.ts",
    "./jas_e2e/smoke/*.e2e.ts",
    "./jas_e2e/regression/*.e2e.ts",
    "./*.ts",
    "./**/*.ts",
    "./wdio.conf.ts",
    "./wdio.conf.ts",
    "./jas_e2e/*.e2e.ts",
    "./wdio.conf.e2e.ts",
    "./wdio.conf.e2e.ts",
    "./cucumber/feature/**/*.feature",
    "./cucumber/**/**/*.ts",
    "./**/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "./**/**/*.js",
  ]
}